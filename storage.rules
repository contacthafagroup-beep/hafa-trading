rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             request.auth.token.email == 'admin@hafatrading.com';
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidVideoType() {
      return request.resource.contentType.matches('video/.*');
    }
    
    function isValidFileType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('video/.*') ||
             request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('application/msword') ||
             request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*');
    }
    
    function isValidSize(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }
    
    // Product images
    match /products/{productId}/{allPaths=**} {
      // Anyone can read product images
      allow read: if true;
      // Only admins can upload/delete product images
      allow write: if isAdmin() && 
                      isValidImageType() && 
                      isValidSize(10); // 10MB max
    }
    
    // Blog images and media
    match /blog/{postId}/{allPaths=**} {
      // Anyone can read blog media
      allow read: if true;
      // Only admins can upload/delete blog media
      allow write: if isAdmin() && 
                      isValidFileType() && 
                      isValidSize(50); // 50MB max for videos
    }
    
    // User profile images
    match /users/{userId}/profile/{allPaths=**} {
      // Anyone can read profile images
      allow read: if true;
      // Users can upload their own profile images
      allow write: if isSignedIn() && 
                      request.auth.uid == userId && 
                      isValidImageType() && 
                      isValidSize(5); // 5MB max
    }
    
    // Order documents
    match /orders/{orderId}/{allPaths=**} {
      // Users can read their own order documents
      allow read: if isSignedIn() && 
                     (resource.metadata.userId == request.auth.uid || isAdmin());
      // Only admins can upload order documents
      allow write: if isAdmin() && 
                      isValidFileType() && 
                      isValidSize(20); // 20MB max
    }
    
    // RFQ documents
    match /rfqs/{rfqId}/{allPaths=**} {
      // Users can read their own RFQ documents
      allow read: if isSignedIn() && 
                     (resource.metadata.userId == request.auth.uid || isAdmin());
      // Users can upload documents for their RFQs
      allow write: if isSignedIn() && 
                      isValidFileType() && 
                      isValidSize(20); // 20MB max
    }
    
    // Shipment documents
    match /shipments/{shipmentId}/{allPaths=**} {
      // Users can read their own shipment documents
      allow read: if isSignedIn() && 
                     (resource.metadata.userId == request.auth.uid || isAdmin());
      // Only admins can upload shipment documents
      allow write: if isAdmin() && 
                      isValidFileType() && 
                      isValidSize(20); // 20MB max
    }
    
    // Supplier documents (admin only)
    match /suppliers/{supplierId}/{allPaths=**} {
      allow read, write: if isAdmin() && 
                            isValidFileType() && 
                            isValidSize(20); // 20MB max
    }
    
    // Insights media
    match /insights/{insightId}/{allPaths=**} {
      // Anyone can read insights media
      allow read: if true;
      // Only admins can upload insights media
      allow write: if isAdmin() && 
                      isValidFileType() && 
                      isValidSize(50); // 50MB max
    }
    
    // Temporary uploads (for processing)
    match /temp/{userId}/{allPaths=**} {
      // Users can upload to their temp folder
      allow read, write: if isSignedIn() && 
                            request.auth.uid == userId && 
                            isValidFileType() && 
                            isValidSize(100); // 100MB max
      // Auto-delete after 24 hours (implement via Cloud Function)
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
