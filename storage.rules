rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }
    
    function isStaff() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin', 'superadmin'];
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB max
    }
    
    function isValidDocument() {
      return request.resource.contentType.matches('application/pdf') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    // Product images
    match /products/{productId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isStaff() && isValidImage();
    }
    
    // Category images
    match /categories/{categoryId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isStaff() && isValidImage();
    }
    
    // Blog images
    match /blog/{postId}/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isStaff() && isValidImage();
    }
    
    // User profile images
    match /users/{userId}/profile/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated() && 
                     (request.auth.uid == userId || isAdmin()) && 
                     isValidImage();
    }
    
    // RFQ attachments
    match /rfqs/{rfqId}/{allPaths=**} {
      allow read: if isStaff();
      allow write: if isAuthenticated() && (isValidImage() || isValidDocument());
    }
    
    // Certificates and documents
    match /certificates/{allPaths=**} {
      allow read: if true; // Public read
      allow write: if isStaff() && (isValidImage() || isValidDocument());
    }
    
    // Order documents
    match /orders/{orderId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isStaff() && isValidDocument();
    }
  }
}
