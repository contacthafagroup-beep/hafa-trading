rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }
    
    function isStaff() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin', 'superadmin'];
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }
    
    // Categories collection
    match /categories/{categoryId} {
      allow read: if true; // Public read
      allow write: if isStaff();
    }
    
    // Products collection
    match /products/{productId} {
      allow read: if true; // Public read
      allow write: if isStaff();
    }
    
    // Orders collection
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.customerId) || isStaff();
      allow create: if isAuthenticated();
      allow update: if isStaff();
      allow delete: if isAdmin();
    }
    
    // RFQs collection
    match /rfqs/{rfqId} {
      allow read: if isOwner(resource.data.customerId) || isStaff();
      allow create: if true; // Anyone can submit RFQ
      allow update: if isStaff();
      allow delete: if isAdmin();
    }
    
    // Shipments collection
    match /shipments/{shipmentId} {
      allow read: if isAuthenticated();
      allow write: if isStaff();
    }
    
    // Blog posts collection
    match /blog/{postId} {
      allow read: if resource.data.isPublished == true || isStaff();
      allow write: if isStaff();
    }
    
    // Suppliers collection
    match /suppliers/{supplierId} {
      allow read: if isStaff();
      allow create: if true; // Anyone can register as supplier
      allow update: if isStaff();
      allow delete: if isAdmin();
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if resource.data.isApproved == true || isStaff();
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId) || isStaff();
      allow delete: if isAdmin();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isStaff();
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Analytics collection
    match /analytics/{analyticsId} {
      allow read: if isStaff();
      allow write: if isAdmin();
    }
  }
}
