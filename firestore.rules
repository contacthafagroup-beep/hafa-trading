rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             (request.auth.token.email == 'tilahunmekbib345@gmail.com' ||
              request.auth.token.email == 'admin@hafatrading.com' ||
              get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can create their own user document
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Users can read and update their own data
      allow read, update: if isOwner(userId);
      // Only admins can delete users
      allow delete: if isAdmin();
      // Admins can read all users
      allow read: if isAdmin();
    }
    
    // Products collection
    match /products/{productId} {
      // Anyone can read published products
      allow read: if true;
      // Only admins can create, update, or delete products
      allow create, update, delete: if isAdmin();
    }
    
    // Categories collection
    match /categories/{categoryId} {
      // Anyone can read categories
      allow read: if true;
      // Only admins can modify categories
      allow create, update, delete: if isAdmin();
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders
      allow read: if isSignedIn() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      // Users can create orders
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Only admins can update or delete orders
      allow update, delete: if isAdmin();
      // Admins can read all orders
      allow list: if isAdmin();
    }
    
    // RFQs (Request for Quotations) collection
    match /rfqs/{rfqId} {
      // Users can read their own RFQs
      allow read: if isSignedIn() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      // Users can create RFQs
      allow create: if isSignedIn();
      // Only admins can update or delete RFQs
      allow update, delete: if isAdmin();
      // Admins can read all RFQs
      allow list: if isAdmin();
    }
    
    // Shipments collection
    match /shipments/{shipmentId} {
      // Users can read their own shipments
      allow read: if isSignedIn() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      // Only admins can create, update, or delete shipments
      allow create, update, delete: if isAdmin();
      // Admins can read all shipments
      allow list: if isAdmin();
    }
    
    // Blog posts collection
    match /blog_posts/{postId} {
      // Anyone can read individual published blog posts
      allow get: if resource.data.status == 'published' || isAdmin();
      // Anyone can list published blog posts
      allow list: if true;
      // Only admins can create, update, or delete blog posts
      allow create, update, delete: if isAdmin();
    }
    
    // Insights collection
    match /insights/{insightId} {
      // Anyone can read visible insights
      allow read: if resource.data.visible == true || isAdmin();
      // Only admins can create, update, or delete insights
      allow create, update, delete: if isAdmin();
      // Admins can read all insights
      allow list: if isAdmin();
    }
    
    // Suppliers collection
    match /suppliers/{supplierId} {
      // Only admins can access suppliers
      allow read, create, update, delete: if isAdmin();
    }
    
    // Customers collection (if separate from users)
    match /customers/{customerId} {
      // Users can read their own customer data
      allow read: if isSignedIn() && 
                     (resource.data.userId == request.auth.uid || isAdmin());
      // Only admins can create, update, or delete customers
      allow create, update, delete: if isAdmin();
      // Admins can read all customers
      allow list: if isAdmin();
    }
    
    // Chat messages collection (using chatMessages collection name)
    match /chatMessages/{messageId} {
      // Users can read messages in their conversations
      allow read: if isSignedIn() && 
                     (resource.data.userId == request.auth.uid || 
                      resource.data.recipientId == request.auth.uid || 
                      isAdmin());
      // Users can create messages
      allow create: if isSignedIn();
      // Only admins can update or delete messages
      allow update, delete: if isAdmin();
      // Admins can list all messages
      allow list: if isAdmin();
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      // System can create notifications
      allow create: if isSignedIn();
      // Users can update their own notifications (mark as read)
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Users can delete their own notifications
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Analytics collection (admin only)
    match /analytics/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Settings collection (admin only)
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Site Content collection (for homepage sections like Why Choose Us)
    match /siteContent/{documentId} {
      // Anyone can read site content
      allow read: if true;
      // Only admins can modify site content
      allow write: if isAdmin();
    }
    
    // Product Gallery collection
    match /productGallery/{galleryId} {
      // Anyone can read gallery items
      allow read: if true;
      // Only admins can create, update, or delete gallery items
      allow create, update, delete: if isAdmin();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
